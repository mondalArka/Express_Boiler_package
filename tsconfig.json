{
    "compilerOptions": {
        "target": "ES6",
        "module": "CommonJS",
        "outDir": "./lib",
        "strict": true,
        "rootDir": "./SourceCode",
        "moduleResolution": "node",
        "skipLibCheck": true,
        "sourceMap": true,
        "declaration": true,
        "declarationDir": "./lib/types"
    },
    "include": [
        "./SourceCode/**/*.ts",
        "./package*.json"
    ],
    "exclude": [
        "./lib"
    ],
    "watch": true
}