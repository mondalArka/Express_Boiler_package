{
    "compilerOptions": {
      "target": "ES6",                      
      "module": "commonjs",                                     
      "esModuleInterop": true,             
      "skipLibCheck": true,                
      "outDir": "./dist",                  
      "rootDir": "./src",                   
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true            
    },
    "include": [
      "./src/**/*"                         
    ],
    "exclude": [
      "node_modules",                      
      "dist"                               
    ]
  }
  