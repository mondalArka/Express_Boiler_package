{
  "name": "boiler-plate-expressjs",
  "version": "1.0.24",
  "type": "commonjs",
  "description": "To create a express-app boiler plate",
  "main": "lib/index.js",
  "bin": {
    "boiler-plate": "./lib/bin/index.js"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "win": "rimraf lib && tsc -p . && xcopy /E /I \"SourceCode\\templates\" \"lib\\templates\" > nul && node ./lib/bin/app.js",
    "linux": "rm -rf lib && tsc -p . && cp -r SourceCode/templates lib/templates && node ./lib/bin/app.js",
    "watch_win": "tsc -w .",
    "watch_linux": "tsc -w .",
    "build": "tsc -p . && cp -r SourceCode/templates lib/templates"
  },
  "repository": {
    "type": "git",
    "url":  "https://github.com/mondalArka/Express_Boiler_package.git"
  },
  "keywords": [
    "express",
    "expressjs",
    "boiler",
    "boilerplate",
    "boilerplate-express",
    "boilerplate-expressjs",
    "express-boilerplate",
    "boiler-plate-expressjs"
  ],
  "author": "Arka",
  "license": "ISC",
  "dependencies": {
    "nodemon": "^3.1.9",
    "typescript": "^5.7.3"
  },
  "devDependencies": {
    "@types/node": "^22.13.1",
    "rimraf": "^6.0.1"
  }
}
